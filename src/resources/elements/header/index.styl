@require '~style/base'
@require '~elements/switch-button'

.navbar
  appearance: none
  overflow: hidden
  background-color: $color__cornflower-blue
  color: $color__white
  text-align: center
  position: relative
  max-height: 485px
  min-height: 485px

  form
    position: relative
    z-index: 2
    .analyze-input
      width: 100%
      padding: 8px 144px 8px 16px
      appearance: none
      outline: none
      border-radius: 40px
      border: none
      color: $color__cod-gray

    .analyze-button
      position: absolute
      right: 4px
      top: 50%
      transform: translateY(-50%)
      width: 128px
      height: 32px
      border: none
      background: #074071
      color: $color__white
      cursor: pointer
      border-radius: 40px
      appearance: none
      outline: none

      &:hover
        transition: opacity .3s
        opacity: 0.8

  .description
    padding: 8px
    line-height: 24px
    text-align: center

  .title
    text-transform: uppercase
    font-size: 24px
    margin-top: 30px
    display: flex
    margin-bottom: 35px
    justify-content: center
    font-weight: 500

    a
      color: $color__gallery

  .cloudy-background
    margin-left: -150px
    margin-right: -150px
    margin-top: -180px

    .cloudy-layer
      height: 300px
      width: 100%
      background-repeat: repeat
      background-size: 100%

      &.front
        background-image: url('~img/cloud-over.svg')

      &.back
        background-image: url('~img/cloud-under.svg')

    &.animated
      .cloudy-layer
        &.front
          animation: slide 15s ease infinite

        &.back
          animation: slide 30s ease infinite

@keyframes slide
  0%
    background-position: 0 0

  50%
    background-position: -100px 0

  100%
    background-position: 0 0
